<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/log_level_and_tag"
        style="@style/FMD.Text.Log.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="WARN - FmdServerApiRepository" />

    <TextView
        android:id="@+id/log_msg"
        style="@style/FMD.Text.Log.Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        tools:text="The network request failed with HTTP 500" />

    <TextView
        android:id="@+id/log_time"
        style="@style/FMD.Text.Log.Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        tools:text="2024-08-01T13:37" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?attr/dividerVertical" />

</LinearLayout>
